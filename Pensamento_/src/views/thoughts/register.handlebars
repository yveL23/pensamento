<section class="register-thought">
    <div class="header">

        <div class="title">
            <h2>Criar Pensamento:</h2>
        </div>

        <div class="form">
            <form action="/thoughts/create" method="POST">
                <div class="form-field">
                    <label for="title">Título:</label>
                    <input type="text" name="title" placeholder="Insira um título">
                </div>

                <div class="form-field">
                    <label for="description">Descrição:</label>
                    <input type="text" name="description" placeholder="Insira uma descrição">
                </div>

                <div class="form-button">
                    <button type="submit">Criar Pensamento</button>
                </div>
            </form>
        </div>
    </div>
</section>