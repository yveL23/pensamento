<section class="dashboard">
    <div class="header">
        <h2 class="title">Dashboard</h2>
    </div>

    <div class="button-create">
        <a href="/thoughts-create">Criar Pensamento</a>
    </div>

    <div class="content">
        <div class="subtitle">
            <p>Seus pensamentos:</p>
        </div>
        {{#each thoughts}}
            <div class="thoughts-list">
                <p>{{ this.description }}</p>

                <div class="buttons">
                    <a href="">Editar</a>
                    <a href="">Excluir</a>
                </div>
            </div>
        {{/each}}
    </div>
</section>